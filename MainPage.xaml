<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EntryIssue.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EntryIssue">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="15">
        <Label Grid.Row="0" Text="Username" />
        <local:CustomEntry
            Grid.Row="1"
            Background="Transparent"
            Placeholder="John Doe" />

        <Label Grid.Row="2" Text="Password" />
        <local:CustomEntry Grid.Row="3" IsPassword="True" />
    </Grid>
</ContentPage>